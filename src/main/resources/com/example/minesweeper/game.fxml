<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.Label?>
<AnchorPane fx:id="anchor" style="-fx-background-color: #888888;" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minesweeper.HelloController">

    <Pane fx:id="body" layoutX="10.0" layoutY="10.0"
          style="-fx-background-color: #bdbdbd; -fx-border-width: 5px; -fx-border-style: solid; -fx-border-color: #ffffff #7b7b7b #7b7b7b #ffffff;">

        <Pane fx:id="head" prefHeight="70.0"
              style="-fx-background-color: #bdbdbd; -fx-border-width: 5px; -fx-border-color: #7b7b7b #ffffff  #ffffff  #7b7b7b; -fx-border-style: solid;">

            <Button fx:id="smile" layoutX="240.0" layoutY="10.0" onAction="#star" prefHeight="50.0" prefWidth="50.0"
                    style="-fx-background-color: #bdbdbd;-fx-border-color: #ffffff #7b7b7b #7b7b7b #ffffff; -fx-border-width: 5px; -fx-border-style: solid;"/>
            <TextField fx:id="textFieldWidth" promptText="width" layoutX="20.0" layoutY="10.0" prefHeight="50.0"
                       prefWidth="90.0"
                       style="-fx-prompt-text-fill: black;-fx-background-color: #bdbdbd; -fx-border-color: #ffffff #7b7b7b #7b7b7b #ffffff; -fx-border-width: 5px; -fx-border-style: solid;-fx-font-size:18; -fx-font-weight:500"/>
            <TextField fx:id="textFieldHeight" promptText="height" layoutX="130.0" layoutY="10.0" prefHeight="50.0"
                       prefWidth="90.0"
                       style="-fx-prompt-text-fill: black;-fx-background-color: #bdbdbd; -fx-border-color: #ffffff #7b7b7b #7b7b7b #ffffff; -fx-border-width: 5px; -fx-border-style: solid;-fx-font-size:18; -fx-font-weight:500"/>
            <Label fx:id="flagIndicator" layoutX="310.0" layoutY="10.0" prefHeight="50.0" prefWidth="75.0"
                   style="-fx-prompt-text-fill: black;-fx-background-color: #bdbdbd; -fx-border-color: #ffffff #7b7b7b #7b7b7b #ffffff; -fx-border-width: 5px; -fx-border-style: solid;-fx-font-size:20; -fx-font-weight:900"/>
        </Pane>
        <GridPane fx:id="gridPane"/>
    </Pane>

</AnchorPane>