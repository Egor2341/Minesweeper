<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" style="-fx-background-color: #888888;" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minesweeper.HelloController">

    <Pane fx:id="body" layoutX="10.0" layoutY="10.0" prefHeight="700.0" prefWidth="964.0"
          style="-fx-background-color: #bdbdbd; -fx-border-width: 5px; -fx-border-style: solid; -fx-border-color: #ffffff #7b7b7b #7b7b7b #ffffff;"
          styleClass="board">

        <Pane fx:id="head" layoutX="20.0" layoutY="19.0" prefHeight="72.0" prefWidth="924.0"
              style="-fx-background-color: #bdbdbd; -fx-border-width: 5px; -fx-border-color: #7b7b7b #ffffff  #ffffff  #7b7b7b; -fx-border-style: solid;">

            <Button fx:id="smile" layoutX="370.0" layoutY="10.0" onAction="#star" prefHeight="52.0" prefWidth="52.0"
                    style="-fx-background-color: #bdbdbd;-fx-border-color: #ffffff #7b7b7b #7b7b7b #ffffff; -fx-border-width: 5px; -fx-border-style: solid;"
            >
                <font>
                    <Font size="1.0"/>
                </font>
            </Button>
            <TextField fx:id="textFieldWidth" promptText="width" layoutX="22.0" layoutY="10.0"
                       prefHeight="52.0" prefWidth="89.0"
                       style="-fx-prompt-text-fill: black;-fx-background-color: #bdbdbd; -fx-border-color: #ffffff #7b7b7b #7b7b7b #ffffff; -fx-border-width: 5px; -fx-border-style: solid;-fx-font-size:18; -fx-font-weight:500"/>
            <TextField fx:id="textFieldHeight" promptText="height" layoutX="137.0" layoutY="10.0"
                       prefHeight="52.0" prefWidth="89.0"
                       style="-fx-prompt-text-fill: black;-fx-background-color: #bdbdbd; -fx-border-color: #ffffff #7b7b7b #7b7b7b #ffffff; -fx-border-width: 5px; -fx-border-style: solid;-fx-font-size:18; -fx-font-weight:500"/>

        </Pane>
        <GridPane fx:id="gridPane" layoutX="20.0" layoutY="111.0" prefHeight="440" prefWidth="440"
                  style="-fx-border-style: solid; -fx-border-width: 5px; -fx-border-color: #7b7b7b #ffffff #ffffff #7b7b7b; -fx-background-color: #bdbdbd;">
        </GridPane>

    </Pane>

</AnchorPane>